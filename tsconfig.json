{
  "compilerOptions": {
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "jsx": "react-jsx",
    "types": ["jest", "@testing-library/jest-dom", "node"],
    "target": "ES2020",
    "lib": ["DOM", "ES2020", "DOM.Iterable"], 
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true
  },
  "include": ["src", "src/@types"]
}