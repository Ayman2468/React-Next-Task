{
  "compilerOptions": {
    "target": "es2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "src",         // <-- important
    "paths": {
      "@/*": ["*"]            // maps '@/' to 'src/'
    },
  "rootDir": "src",
  "outDir": "dist"
  },
  "include": ["src"]
}